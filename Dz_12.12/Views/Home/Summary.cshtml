@{
    Layout = null;
    var personalInfo = ViewData["PersonalInfo"] as InfoModel;
    var skills = ViewData["Skills"] as SkillsModel;
    var testResults = ViewData["TestResults"] as List<TestQuestionModel>;
}

<html>
<head>
    <title>Підсумок</title>
</head>
<body>
    <h2>Підсумок</h2>
    <h3>Особисті дані:</h3>
    <p>Прізвище: @personalInfo?.LastName</p>
    <p>Ім'я: @personalInfo?.FirstName</p>
    <p>Вік: @personalInfo?.Age</p>
    <p>Спеціалізація: @personalInfo?.Specialization</p>
    <p>Контактні дані: @personalInfo?.ContactInfo</p>

    <h3>Навички:</h3>
    <p>@skills?.SkillsDescription</p>

    <h3>Результати тестування:</h3>
    @if (testResults != null)
    {
        foreach (var result in testResults)
        {
            <p>Питання @result.QuestionNumber: @result.Question</p>
            <p>Відповідь: @result.Answer</p>
        }
    }

    <form method="post" action="/Home/Confirm">
        <input type="submit" value="Підтвердити" />
    </form>
</body>
</html>
